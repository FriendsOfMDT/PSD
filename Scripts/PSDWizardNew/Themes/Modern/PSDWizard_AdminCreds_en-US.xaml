<Grid Background="#004275">
    <Label x:Name="_admTabMainTitle" Content="@MainTitle" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="48" Margin="0,36,0,0" Width="1024" Foreground="White" HorizontalContentAlignment="Center"/>
    <Label x:Name="_admTabSubTitle"  Content="@SubTitle" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,119,0,0" Width="1024" Foreground="White" HorizontalContentAlignment="Center"/>

    <Label Content="Password:" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right" FontSize="24" Margin="0,238,611,359" Width="276" Foreground="White"/>
    <PasswordBox x:Name="TS_AdminPassword" Margin="418,238,271,359" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
    <Label Content="Confirm Password:" Margin="137,292,611,306" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24" Foreground="White" />
    <PasswordBox x:Name="_ConfirmAdminPassword"  Margin="418,290,271,306" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>

    <Canvas x:Name="_admTabValidation" HorizontalAlignment="Center" Margin="0,349,0,235" Background="LightGreen" Visibility="Visible" Width="482">
        <TextBox x:Name="_admTabValidation_Name" Background="Transparent" BorderThickness="0" TextWrapping="NoWrap" FontSize="20" IsReadOnly="True"  VerticalContentAlignment="Center" Canvas.Left="10" Canvas.Top="10" Width="406" Height="36" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Rectangle x:Name="_admTabValidation_Alert" Width="30" Height="30" Fill="Red" Canvas.Left="442" Canvas.Top="13" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_alert}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Rectangle x:Name="_admTabValidation_Check" Width="30" Height="30" Fill="Green" Canvas.Left="442" Canvas.Top="13" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_check}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Canvas>
</Grid>
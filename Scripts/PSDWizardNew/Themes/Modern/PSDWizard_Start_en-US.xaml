<Canvas x:Name="_startPage" HorizontalAlignment="Left" Height="768" Width="1024" VerticalAlignment="Top" Background="#004275" Panel.ZIndex="300" >
    <Grid x:Name="_startPageLayout" Width="1024" Height="778">
        <Grid.RowDefinitions>
            <RowDefinition Height="102*"></RowDefinition>
            <RowDefinition Height="102*"></RowDefinition>
            <RowDefinition Height="105*"></RowDefinition>
            <RowDefinition Height="80*"></RowDefinition>
            <RowDefinition Height="168*"></RowDefinition>
            <RowDefinition Height="180*"></RowDefinition>
            <RowDefinition Height="88*"></RowDefinition>
            <RowDefinition Height="55*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Margin="30,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="120" Grid.RowSpan="2" Width="120">
            <Image x:Name="_wizBeginLogo" Height="120" Width="120"/>
        </StackPanel>
        <DockPanel Grid.Row="0" Background="#1f1f1f" HorizontalAlignment="Center" Margin="0,0,0,23" Width="1024" />

        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="@ORG" VerticalAlignment="Center" FontSize="24" Width="631" TextAlignment="Center" FontFamily="Segoe UI Light" Height="64" Foreground="White"/>
        <TextBlock Grid.Row="2" HorizontalAlignment="Center" Text="@MainTitle" VerticalAlignment="Center" FontSize="36" Width="800" TextAlignment="Center" FontFamily="Segoe UI Light" Height="64" Foreground="White"/>
        <TextBlock Grid.Row="3" HorizontalAlignment="Center" Text="@SubTitle" VerticalAlignment="Top" FontSize="16" FontFamily="Segoe UI Light" Width="800" TextAlignment="Center" Height="26" Foreground="White"/>

        <Button Grid.Row="4" x:Name="_start" Width="380" Height="68" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Lets get started" FontSize="24" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
        </Button>

        <Button Grid.Row="6" x:Name="_startPageOpenPS"  Style="{DynamicResource ButtonDarkBlueSquare}" Width="100" HorizontalAlignment="Right" Margin="0,0,20,20">
            <StackPanel Width="91" Height="44">
                <Label Content="Exit to PS" Foreground="White" BorderThickness="0" HorizontalAlignment="Center" FontSize="10" VerticalContentAlignment="Center" />
                <Rectangle Width="20" Height="20" Fill="White" HorizontalAlignment="Center">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_console}"/>
                    </Rectangle.OpacityMask>
                </Rectangle>
            </StackPanel>
        </Button>
        <DockPanel Grid.Row="7" Background="#1f1f1f" HorizontalAlignment="Center" Width="1024" />
    </Grid>
</Canvas>
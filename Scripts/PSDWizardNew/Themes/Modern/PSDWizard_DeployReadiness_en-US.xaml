    <Grid Margin="22,499,36,60" x:Name="grdIdentitySection">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="121" Width="124*"></ColumnDefinition>
            <ColumnDefinition Width="197"></ColumnDefinition>
            <ColumnDefinition MinWidth="104" Width="115*"></ColumnDefinition>
            <ColumnDefinition MinWidth="189" Width="192*"></ColumnDefinition>
            <ColumnDefinition MinWidth="121" Width="138*"></ColumnDefinition>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <Label Content="Serial Tag:" Grid.Column="0"  HorizontalAlignment="Left" FontSize="16" VerticalAlignment="Center" Foreground="Black" Height="31" Width="80" HorizontalContentAlignment="Right" Margin="44,0,0,0"/>
        <TextBox x:Name="TS_SerialNumber" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="NoWrap" FontSize="18" IsReadOnly="True" Margin="0,4,0,4" Width="189" Background="#004275" BorderBrush="#FF1D3245"/>

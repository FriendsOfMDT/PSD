        <TextBox x:Name="TS_Model" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="NoWrap" FontSize="18" IsReadOnly="True" Margin="0,4,0,4" Width="190" Background="#004275" BorderBrush="#FF1D3245"/>

<Grid x:Name="_locTabLayout" Margin="0" Grid.ColumnSpan="2">

    <Label x:Name="_locTabMainTitle" HorizontalAlignment="Left" Margin="128,10,0,0" VerticalAlignment="Top" FontSize="22" Content="@MainTitle"/>
    <Rectangle Grid.Column="0" Fill="DarkViolet" HorizontalAlignment="Right" Height="40" Width="40" Margin="0,10,10,0" VerticalAlignment="Top">
        <Rectangle.OpacityMask>
            <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_webclock}"/>
        </Rectangle.OpacityMask>
    </Rectangle>

    <Label Content="Language Settings" FontSize="18" HorizontalAlignment="Left" Margin="22,67,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.49,0.532" Width="432"/>

    <Label Content="Language to Install:" FontSize="12" Margin="29,109,874,213" HorizontalContentAlignment="Right"/>
    <ComboBox x:Name="_locTabLanguage" HorizontalAlignment="Left" Margin="140,107,0,0" VerticalAlignment="Top" Width="328" Height="28" FontSize="18" Style="{DynamicResource SimpleComboBoxStyle}"/>

    <Label Content="Time and current format:" FontSize="12" Margin="0,156,874,166" HorizontalContentAlignment="Right"/>
    <ComboBox x:Name="_locTabSystemLocale" HorizontalAlignment="Left" Margin="139,156,0,0" VerticalAlignment="Top" Width="329" Height="28" FontSize="18" Style="{DynamicResource SimpleComboBoxStyle}"/>

    <Label Content="Keyboard layout:" FontSize="12" Margin="35,207,880,113" HorizontalContentAlignment="Right"/>
    <ComboBox x:Name="_locTabKeyboardLocale" HorizontalAlignment="Left" Margin="139,209,0,0" VerticalAlignment="Top" Width="329" Height="28" FontSize="18" Style="{DynamicResource SimpleComboBoxStyle}"/>

    <Label Content="Time Settings" FontSize="18" HorizontalAlignment="Left" Margin="560,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.49,0.532" Width="424"/>

    <Label Content="Time zone:" FontSize="12" Margin="552,106,384,212" HorizontalContentAlignment="Right"/>
    <ComboBox  x:Name="_locTabTimeZoneName" HorizontalAlignment="Left" Margin="635,104,0,0" VerticalAlignment="Top" Width="329" Height="28" FontSize="18" Style="{DynamicResource SimpleComboBoxStyle}"/>

    <TextBox x:Name="TS_UILanguage" Margin="474,106,474,214" IsEnabled="False" />
    <TextBox x:Name="TS_SystemLocale" Margin="474,156,474,164" IsEnabled="False" />
    <TextBox x:Name="TS_UserLocale" Margin="545,156,403,164" IsEnabled="False" />
    <TextBox x:Name="TS_KeyboardLocale" Margin="474,209,403,111" IsEnabled="False" />
    <TextBox x:Name="TS_TimeZoneName" Margin="800,141,50,179" IsEnabled="False" />
    <TextBox x:Name="TS_TimeZone" Margin="903,174,50,142" IsEnabled="False" />

    <Label Content="More Info" FontSize="14" HorizontalAlignment="Right" Margin="0,259,916,0" VerticalAlignment="Top" Foreground="LightSlateGray" Width="88" HorizontalContentAlignment="Right" />
    <TextBlock x:Name="_localeTabMoreInfo" HorizontalAlignment="Left" Margin="117,266,0,0" Width="675" TextWrapping="Wrap" VerticalAlignment="Top" Height="72">
        <Run Text="@Help"/>
    </TextBlock>
</Grid>
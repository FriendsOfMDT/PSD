<Grid x:Name="_admTabLayout" Margin="0" Grid.ColumnSpan="2">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="490"></ColumnDefinition>
        <ColumnDefinition Width="150"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Label x:Name="_admTabMainTitle" Grid.Column="0" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" FontSize="22" Content="@MainTitle"/>
    <Rectangle Grid.Column="0" Fill="DarkGray" HorizontalAlignment="Right" Height="40" Width="40" Margin="0,20,13.5,0" VerticalAlignment="Top">
        <Rectangle.OpacityMask>
            <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_key}"/>
        </Rectangle.OpacityMask>
    </Rectangle>

    <Label Content="Local administrator password" FontSize="18" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="470"/>

    <Label Content="Password:" HorizontalAlignment="Right" FontSize="14" Margin="0,138,331.5,362"/>
    <PasswordBox x:Name="TS_AdminPassword" Margin="172,138,60.5,362" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
    <Label Content="Confirm Password:" FontSize="14" Margin="35,177,323.5,325"/>
    <PasswordBox x:Name="_ConfirmAdminPassword"  Margin="172,177,60.5,325" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>

    <Canvas x:Name="_admTabValidation" Margin="10,210,10.5,274" Visibility="Hidden">
        <TextBox x:Name="_admTabValidation_Name" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" TextWrapping="NoWrap" FontSize="18" IsReadOnly="True"  VerticalContentAlignment="Center" Canvas.Left="10" Canvas.Top="10" />
        <Rectangle x:Name="_admTabValidation_Alert" Width="30" Height="30" Fill="Red" HorizontalAlignment="Right" Canvas.Left="430" Canvas.Top="7" Visibility="Hidden">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_alert}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Rectangle x:Name="_admTabValidation_Check" Width="30" Height="30" Fill="Green" HorizontalAlignment="Right" Canvas.Left="385" Canvas.Top="7" Visibility="Hidden">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_check}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Canvas>

    <Label Content="Administrator user accounts" FontSize="18" HorizontalAlignment="Left" Margin="18,326,0,0" VerticalAlignment="Top" Width="462"/>
    <Label Content="Admin Accounts(s)" HorizontalAlignment="Right" FontSize="14" Margin="0,364,330.5,136" Width="125"/>
    <TextBox x:Name="TS_OSDAddAdmin" Margin="172,364,60.5,132" FontSize="14" FontWeight="Bold" TextWrapping="NoWrap" VerticalContentAlignment="Center" IsEnabled="False"/>

    <Label Content="More Info" Grid.Column="1" FontSize="14" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Foreground="LightSlateGray"/>
    <TextBlock x:Name="_admTabMoreInfo" Grid.Column="1" HorizontalAlignment="Left" Margin="10,89,0,0" Width="136" TextWrapping="Wrap" VerticalAlignment="Top" Height="422">
        <Run Text="@Help"/>
    </TextBlock>

</Grid>